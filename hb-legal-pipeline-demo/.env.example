# HB Legal Intelligence Pipeline - Environment Configuration
# Copy this file to .env and update with your values

# API Server Configuration
MCP_PORT=3001
MCP_HOST=localhost
NODE_ENV=production

# Database Configuration
DB_PATH=./prompts.db
DB_BACKUP_PATH=./backups/

# n8n Configuration
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=demo
N8N_BASIC_AUTH_PASSWORD=hbdemo2025
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# PostgreSQL Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=n8n
POSTGRES_DB=n8n

# AI Model API Keys (Required for production)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# GEMINI_API_KEY=your-gemini-api-key-here
# CUSTOM_MODEL_ENDPOINT=https://your-custom-model.api/

# Frontend Configuration
FRONTEND_PORT=8080
DASHBOARD_REFRESH_INTERVAL=5000

# Security Settings
JWT_SECRET=your-very-secure-jwt-secret-here-change-this
API_KEY=your-api-key-for-external-access
CORS_ORIGIN=http://localhost:8080,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Performance Settings
MAX_CONCURRENT_WORKFLOWS=10
REQUEST_TIMEOUT=30000
MAX_DOCUMENT_SIZE=10485760

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
NOTIFICATION_EMAIL=admin@hblegal.com

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key

# Feature Flags
ENABLE_OCR=false
ENABLE_MULTI_LANGUAGE=false
ENABLE_AUDIT_LOG=true
ENABLE_METRICS_EXPORT=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=hb-legal-backups

# Development Settings (Remove in production)
DEBUG=false
VERBOSE_LOGGING=false
MOCK_AI_RESPONSES=false